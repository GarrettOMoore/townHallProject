
{
   "settings": {
     "ecmascript": 5
  },
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "browser": true,
    "jquery": true,
    "node": true
  },
  "globals": {
    "mapboxgl":true,
    "TownHall": true,
    "geoViewport": true,
    "stateView": true,
    "mapView": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "semi": 1,
    "strict": 0,
    "indent": [2, 2],
    "eqeqeq": 1,
    "quotes":  ["error", "single", { "avoidEscape": true }],
    "no-multi-spaces": [1, {
      "exceptions": {
        "VariableDeclarator": true,
        "FunctionExpression": true
      }
    }],
    "key-spacing": [0, {"align": "value"}],
    "no-underscore-dangle": 0
  }
}
